{
  "$schema": "https://raw.githubusercontent.com/jetpack-io/devbox/0.10.1/.schema/devbox.schema.json",
  "packages": [
    "jdk@17",
    "nodejs@22",
    "ruby@3.3"
  ],
  "shell": {
    "init_hook": "devbox run app:init",
    "scripts": {
      "app:init": [
        "bundle install"
      ],
      "app:lint": [
        "bundle exec fastlane lint"
      ],
      "app:ktlint": [
        "bundle exec fastlane ktlint"
      ],
      "app:ktlint:format": [
        "bundle exec fastlane ktlintFormat"
      ],
      "app:screenshots": [
        "bundle exec fastlane screenshots"
      ],
      "app:deploy": [
        "[ -d fastlane/metadata/android/nn ] && rm -r fastlane/metadata/android/nn",
        "bundle exec fastlane deploy"
      ],
      "docs:init": [
        "npm install"
      ],
      "docs:dev": [
        "npm run docs:dev"
      ]
    }
  }
}
